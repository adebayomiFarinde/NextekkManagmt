@model IEnumerable<NextekkManagmt.Models.UserEmployee>

@{
    ViewBag.Title = "Employee Page";
}

<h3 style="color:cadetblue"><strong>Employee Page</strong></h3><br /><br />

<table class="table table-bordered table-responsive table-hover">
    <tr style="background-color:lightgray">

        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Position
        </th>


        <th>
            Actions
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="background-color:whitesmoke">
            <td style="color:dodgerblue">
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td style="color:dodgerblue">
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td style="color:dodgerblue">
                @Html.DisplayFor(modelItem => item.Position)
            </td>

            <td>
                <button class="btn btn-group-sm">@Html.ActionLink("Details", "DetailEmployee", new { id = item.ID })</button>
            </td>
        </tr>
    }

</table>
