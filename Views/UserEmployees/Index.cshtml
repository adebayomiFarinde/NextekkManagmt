@model IEnumerable<NextekkManagmt.Models.UserEmployee>

@{
    ViewBag.Title = "Administrative Page";
}

<h3 style="color:cadetblue"><strong>Administrative Page</strong></h3><br /><br />

<p>
    @Html.ActionLink("Add New Employee", "Create")
</p>
<table class="table table-bordered table-responsive table-hover">
    <tr style="background-color:lightgray">
        <th>
            Active
        </th>

        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Position
        </th>   
        <th>
            Actions
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="background-color:whitesmoke">
            <td>
            
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td style="color:dodgerblue">
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td style="color:dodgerblue">
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td style="color:dodgerblue">
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            
            <td>

                <button class="btn btn-group-sm">@Html.ActionLink("Edit", "Edit", new { id = item.ID})</button> 
                <button class="btn btn-group-sm">@Html.ActionLink("Details", "Details", new { id = item.ID })</button> 
                <button class="btn btn-group-sm">@Html.ActionLink("Delete", "Delete", new { id = item.ID })</button> 
                
            </td>
        </tr>
    }

</table>
